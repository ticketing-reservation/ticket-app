{
  "name": "ticket-app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "prisma": {
    "seed": "ts-node --transpile-only ./prisma/seeders/index.ts"
  },
  "scripts": {
    "prisma:migrate": "npx prisma migrate dev",
    "prisma:generate": "npx prisma generate",
    "prisma:seed": "npx prisma db seed",
    "db": "npm run prisma:generate",
    "db:migrate": "npm run prisma:migrate && npm run prisma:generate",
    "db:init": "npm run prisma:migrate && npm run prisma:generate && npm run prisma:seed",
    "build": "tsc -p .",
    "dev": "nodemon -L server.ts",
    "dev:db": "npm run db && npm run dev",
    "dev:migrate": "npm run db:migrate && npm run dev",
    "dev:init": "npm run db:init && npm run dev"
  },
	"_moduleAliases": {
    "@controllers" : "dist/controllers/",
    "@exceptions" : "dist/exceptions/",
    "@handlers" : "dist/handlers/",
    "@middlewares" : "dist/middlewares/",
    "@routes" : "dist/routes/",
    "@services" :  "dist/services/",
    "@types" : "dist/types/",
    "@utils" : "dist/utils/"
	},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ticketing-reservation/ticket-app.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ticketing-reservation/ticket-app/issues"
  },
  "homepage": "https://github.com/ticketing-reservation/ticket-app#readme",
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.1",
    "nodemon": "^3.0.1",
    "prisma": "^5.6.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
